{
  "name": "CASKRNChallenge",
  "version": "0.74.2",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios --simulator=\"iPhone 15\"",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "installDebug": "cd android && ./gradlew installCASKRNChallengeDebug -PreactNativeDevServerPort=8081 && cd ..",
    "resetNodeModules": "npm run purgeNodeModules && npm install",
    "purgeNodeModules": "rm -rf node_modules && rm -f package-lock.json",
    "resetPods": "npm run purgePods && cd ios && pod repo update && pod install && cd ..",
    "purgePods": "rm -rf ios/Pods && rm -f ios/Podfile.lock",
    "resetGradle": "npm run purgeGradle && cd android && ./gradlew clean && cd ..",
    "purgeGradle": "rm -rf android/.gradle && rm -rf android/app/build",
    "resetDependencies": "npm run purgeDependencies && npm run resetNodeModules && npm run resetPods && npm run resetGradle",
    "purgeDependencies": "npm run purgeNodeModules && npm run purgePods && npm run purgeGradle"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@react-native-firebase/app": "^22.4.0",
    "@react-native-firebase/messaging": "^22.4.0",
    "@react-native-picker/picker": "^2.11.1",
    "@react-navigation/bottom-tabs": "^7.4.4",
    "@react-navigation/native": "^7.1.16",
    "@react-navigation/stack": "^7.4.4",
    "@shopify/flash-list": "^1.8.3",
    "react": "18.2.0",
    "react-native": "0.74.2",
    "react-native-config": "^1.5.5",
    "react-native-gesture-handler": "~2.16.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-permissions": "^5.4.2",
    "react-native-picker-select": "^9.3.1",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.13.1",
    "react-native-svg": "^15.3.0",
    "react-native-svg-transformer": "^1.4.0",
    "react-native-toast-message": "^2.3.3",
    "react-native-vector-icons": "^10.3.0",
    "react-native-webview": "^13.15.0",
    "react-native-youtube-iframe": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.74.84",
    "@react-native/eslint-config": "0.74.84",
    "@react-native/metro-config": "0.74.84",
    "@react-native/typescript-config": "0.74.84",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
